<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>-->

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cos_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/buyer_list" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/main_theme_color" />

        <TextView
            android:id="@+id/tv_sk_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/seller_list" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/main_theme_color" />

        <TextView
            android:id="@+id/tv_perfume_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/good_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/cos_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"

            android:background="@color/main_theme_color" />

        <View
            android:id="@+id/sk_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/main_theme_color"
            android:visibility="invisible" />

        <View
            android:id="@+id/perfume_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/main_theme_color"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_result"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/no_goods"
        android:layout_height="100dp" />

    <ListView
        android:id="@+id/listview_cos"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>